import boost ;
using testing ;

boost.use-project 1.57 ;

project Calculator
    :   requirements
        <library>/boost//headers
    ;

obj calc_obj
    :   calc.cpp
    ;

unit-test calc_test
    :   test.cpp
        calc_obj
    ;

exe calc
    :   main.cpp
        calc_obj
        calc_test
    ;

install exe
    :   calc
    ;
